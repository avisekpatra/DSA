#include<stdio.h>

int main()
{
    char name[]="avisek";
   printf("lower case id %s\n",name);
    int i;
    for(i=0;name[i]!='\0';i++)
    {
        name[i]=name[i]-32; //as the differenvce betwee A=65 and a=97 is 32 acording to ASCII so by subtracting the ASCCI code of lowercase with 32 we will get the coresponding uppercase letter 
    }

    printf("upper case is %s\n",name);
    return 0;
}